<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE resource-adaptor-type-jar PUBLIC "-//Sun Microsystems, Inc.//DTD JAIN SLEE Resource Adaptor Type 1.1//EN" "http://java.sun.com/dtd/slee-resource-adaptor-type-jar_1_1.dtd">

<resource-adaptor-type-jar>
    <description />

    <resource-adaptor-type>

        <description>Radius 1.0 resource adaptor type</description>

        <resource-adaptor-type-name>Radius-1.0-RA</resource-adaptor-type-name>
        <resource-adaptor-type-vendor>org.mobicents.resources.radius</resource-adaptor-type-vendor>
        <resource-adaptor-type-version>1.0</resource-adaptor-type-version>

        <library-ref>
            <library-name>radius-provider-library</library-name>
            <library-vendor>org.mobicents.resources.radius</library-vendor>
            <library-version>1.0</library-version>
        </library-ref>

        <resource-adaptor-type-classes>
            <activity-type>
                <activity-type-name>org.mobicents.resources.radius.AccessRequest</activity-type-name>
            </activity-type>

            <activity-context-interface-factory-interface>
                <activity-context-interface-factory-interface-name>
                    org.mobicents.slee.resource.radius.ratype.RadiusActivityContextInterfaceFactory
                </activity-context-interface-factory-interface-name>
            </activity-context-interface-factory-interface>

            <resource-adaptor-interface>
                <resource-adaptor-interface-name>
                    org.mobicents.resources.radius.RadiusProvider
                </resource-adaptor-interface-name>
            </resource-adaptor-interface>
        </resource-adaptor-type-classes>


        <!-- radius connection events -->
        <event-type-ref>
            <event-type-name>org.mobicents.resources.radius.ACCESS_REQUEST</event-type-name>
            <event-type-vendor>org.mobicents.resources.radius</event-type-vendor>
            <event-type-version>1.0</event-type-version>
        </event-type-ref>
        <event-type-ref>
            <event-type-name>org.mobicents.resources.radius.ACCOUNT_START_REQUEST</event-type-name>
            <event-type-vendor>org.mobicents.resources.radius</event-type-vendor>
            <event-type-version>1.0</event-type-version>
        </event-type-ref>
        <event-type-ref>
            <event-type-name>org.mobicents.resources.radius.ACCOUNT_INTERIM_REQUEST</event-type-name>
            <event-type-vendor>org.mobicents.resources.radius</event-type-vendor>
            <event-type-version>1.0</event-type-version>
        </event-type-ref>
        <event-type-ref>
            <event-type-name>org.mobicents.resources.radius.ACCOUNT_STOP_REQUEST</event-type-name>
            <event-type-vendor>org.mobicents.resources.radius</event-type-vendor>
            <event-type-version>1.0</event-type-version>
        </event-type-ref>

    </resource-adaptor-type>
</resource-adaptor-type-jar>

